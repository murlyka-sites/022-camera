.burger
	position relative
	display block
	width 100%
	height 100%
	transform rotate(0deg)
	transition .2s ease-in-out
	cursor pointer
	
	
			

	&_main
		border none
		background transparent 
		width 50px
		height 35px
		
		@media (min-width $screen-sm)
			display none
	
	&__line
		display block
		position absolute
		height 2px
		width 100%
		background white
		opacity 1
		left 0
		transform rotate(0deg) 
		transition .25s ease-in-out
		
		&:nth-child(1) {
			top 0
		}
		
		&:nth-child(2) {
			top 50%
			margin-top -1px 
		}
		
		&:nth-child(3) {
			bottom 0
		}
		
	&_open 
		span
			&:nth-child(1)
				top: 12px;
				transform: rotate(135deg);

			&:nth-child(2) 
				opacity: 0;
				left: -40px;

			&:nth-child(3)
				top: 12px;
				transform: rotate(-135deg);
				
	&_main &__line
		height 5px
		border-radius: 2px;
		
		&:nth-child(2) {
			margin-top -3px
		}