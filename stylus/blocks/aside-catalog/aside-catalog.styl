.aside-catalog
	padding 15px 0
	border 1px solid #d6d6d6
	
	.slick-dots
		padding 0
		margin 0
		text-align center
		list-style-type none
		
		li 
			display inline-block
			margin 0 5px
		
		li button
			display block
			width 7px
			height 7px
			padding 0
			border none
			border-radius 50%
			background-color #fec4aa
			font-size 0
			
		li button:hover,
		.slick-active button
			background-color #f66a33
		
	img
		margin auto