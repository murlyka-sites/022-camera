.text
	&__h1
		margin 0
		color #505050
		font-family "Gotham Pro"
		font-size 24px
		font-weight 700
		line-height 35px
		text-transform uppercase
		
	&__h2
		color #171717
		font-family Intro
		font-size 16px
		font-weight 700
		text-transform uppercase
		letter-spacing 0.05em 
		
		&_decorline:after
			content ""
			display block
			width 30px
			height 2px
			margin 15px 0 0
			background-color #f95318
	
	&__p 
		margin 0 0 16px 
		color #242424
		font-family "Gotham Pro"
		font-size 14px
		font-weight 400
		// letter-spacing 0.001em
	
	&__h5 
		color #242424
		font-family "Gotham Pro"
		font-size 14px
		font-weight 400
		// letter-spacing 0.001em
	
	&__ul
		padding 3px 0 0 30px
		margin 0
		color #242424
		font-family "Gotham Pro"
		font-size 14px
		font-weight 400
		list-style-type none
			
	&__li
		position relative
		margin-bottom -3px
		
		&:before
			content ""
			position absolute
			left -20px
			top 4px 
			display block
			width 0
			height 0
			border 4px solid $theme-red
			border-left-width 6px 
			border-right-width 6px 
			border-top-color transparent
			border-right-color transparent
			border-bottom-color transparent
			
		
			