.foo
	
	&__container
		
		padding 30px 0 45px
		
		@media (min-width $screen-sm)
			display flex
			align-items flex-start
			justify-content space-between
			padding 30px 40px 45px
			
	&__column
		max-width 310px
		
		&_info 
			color #505050
			font-family "Gotham Pro"
			font-size 12px
			font-weight 400
			line-height 24px
	
	&__site-map
		color $theme-red
		font-family "Gotham Pro"
		font-size 12px
		line-height 30px
		text-decoration underline
		
		&:hover,
		&:focus,
		&:active
			color $theme-red
			text-decoration none