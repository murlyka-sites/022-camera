.nav
	&__container
		display none
		position relative
		padding 10px 		
		margin 0 
		list-style-type none
		background $theme-red 
		color white
		font-family Intro
		font-size 12px
		line-height 20px 
		font-weight 700
		text-transform uppercase
		
		&_open
			display block
		
		@media (min-width $screen-sm)
			display flex
			align-items stretch
			justify-content space-around
			height 70px
			padding 0 5px
			
		@media (min-width $screen-md)
			padding 0 15px
			font-size 14px
			
	&__item
		position relative
		padding 5px 0 
		@media (min-width $screen-sm)
			padding 25px 5px
			
		@media (min-width $screen-md)
			padding 25px 10px 
			
		@media (min-width $screen-lg)
			padding 25px 20px
			
	&__link
		display block
		
		@media (min-width $screen-sm)
			&_arrow 
				position relative
				padding-right 15px
				
			&_arrow:after 
				position absolute
				top 50%
				right 0 
				display inline-block
				width 0
				height 0
				content ""
				margin-top -1px
				border 4.5px solid white
				border-left-color transparent 
				border-right-color transparent
				border-bottom-color transparent		
	
	&__subcontainer
		display none
		z-index 5
		// display none
		
		padding 0
		margin 0
		list-style-type none
		
		@media (min-width $screen-sm)
			position absolute
			left 0
			right auto
			top 70px
			width 200px 
			
	&__subitem
		
	&__sublink
		display block
		padding 5px 20px 
		background $theme-red  
		background lighten($theme-red, 10%)
		
		@media (min-width $screen-sm)
			background $theme-red 
			
		&:hover,
		&:focus,
		&:active 
			background lighten($theme-red, 10%)
		
	&__item:hover &__subcontainer 
		display block
	
	