.irs {
	margin-top: -14px;
	margin-bottom: 10px;
	
	&-bar,
	&-bar-edge {
		height: 5px;
		background: #e53119
		border: none;
		border-radius: 0;
	}

	&-line {
		height: 5px;
		border-radius: 0;
		border: none;
		background: #dadada;
	}

	&-slider {
		width: 17px;
		height: 17px;
		top: 26px;
		box-shadow: 0 2px 3px rgba(0, 0, 1, 0.21);
		background: rgb(255, 255, 255);
		border: none;
	}

	&-min,
	&-max {
		top: auto;
		bottom: -10px;
		color: rgb(135, 135, 135);
		background: transparent;
		font-family: Lato;
		font-size: 12px;
		font-weight: 400;
	}
}