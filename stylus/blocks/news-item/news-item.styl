.news-item
	margin-bottom 30px
	font-family "Gotham Pro"
	font-weight 400
	color #626262
	
	&__pr
		position relative
		margin-bottom 25px
		
		img {
			width 100%
			height auto
		}
		
		&:hover,
		&:focus,
		&:active
			filter brightness(115%)
	
	&__date
		position absolute
		bottom 0
		right 0
		z-index 4
		padding 9px 15px
		background $theme-red
		color white
		font-family Intro
		font-size 14px
		font-weight 400
	
	&__title
		margin-bottom 10px
		color #282828
		font-size 16px
		line-height 24px
		
		&:hover,
		&:focus,
		&:active
			text-decoration underline
			color #ff5a44
	
	&__desc
		color #626262
		font-size 14px
		line-height 24px
