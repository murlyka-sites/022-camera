.header-search
	position relative
	display block
	width 80% 
	width calc( 100% - 70px)
	margin 0
	
	@media (min-width $screen-sm)
		width 100%
	
	&__label
		display block
		width 100%
		margin 0
	
	&__field
		display block
		width 100%
		height 50px
		padding 15px 
		border 1px solid #d1d1d1
		border-radius 0
		// font-family Roboto
		font-size 14px
		font-weight 400
		
		placeholder(#aaa)
	
	&__icon
		position absolute
		top 50%
		right 15px
		margin-top -10px