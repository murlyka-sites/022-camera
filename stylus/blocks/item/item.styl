.item
	padding 0 15px 60px
	border: 3px solid #d1d1d1;

	&__main
		@media (min-width $screen-lg-min)
			display flex

	&__column
		padding 30px 15px

		@media (min-width $screen-lg-min)
			width 50%

	&__rec
		font-size 0
		text-align center

		&-title
			text-align left

		@media (min-width 600px)
			width 550px
			margin auto

		@media (min-width $screen-sm-min)
			width 100%

		&-cell
			display inline-block
			width 174px
			margin 0 5px 20px
			font-size 14px
			text-align center


			@media (min-width: $screen-md-min)
				margin 0 15px 20px
