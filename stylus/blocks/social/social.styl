.social
	color #ffffff
	font-family "Gotham Pro"
	
	font-weight 700
	line-height 20px
	text-transform uppercase
	
	&__container
		display flex
		flex-direction column
		align-items center
		
	
		padding 0
		margin 0
		height 76px
		border-bottom 6px solid $theme-red 
		list-style-type none
		background-color #828282 
		font-size 0
		
		@supports (flex-wrap: wrap)
			flex-wrap wrap
			flex-direction row
			justify-content space-around
		
		@media (min-width $screen-sm)
			flex-direction row
			font-size 11px
	&__item
		text-align center	
		
		@media (min-width 600px)
			width auto
			padding 0
		@media (min-width $screen-sm)
			width 25%
			border-right 1px solid white 
		
		&:last-child
			border-right none
	
	&__icon
		position relative
		top -2px
		
		@media (min-width $screen-sm)
			margin-right 30px