.aside-menu
	
	

	&__button
		position relative
		display block
		width 100%
		height 50px
		padding 5px 45px
		border none
		background $theme-red
		color #ffffff
		text-align left
		font-family Intro
		font-size 12px
		font-weight 700
		text-transform uppercase
		letter-spacing 0.095em 
		
		&:hover,
		&:focus,
		&:active
			background lighten($theme-red, 10%)
			
		&:after
			content ""
			position absolute
			top 50%
			right 20px
			display inline-block
			width 0
			height 0
			border 5px solid white
			border-left-color transparent 
			border-top-color transparent
			border-right-color transparent  
			margin-top -7px
			
		&_close:after {
			border-top-color white
			border-bottom-color transparent  
			margin-top -4px
		}
	
	&__collapse 
		
		@media (min-width $screen-sm) 
			display none
			
			
		&-container
			margin-bottom 30px
			
			@media (min-width $screen-sm) 
				margin-bottom 0
				
				&>div {
					display block !important
				}
	
	&__burger {
		position absolute
		left 10px
		top 18px
		width 18px
		height 14px
		margin-right 10px
	}
	
	&__container
		padding 0 24px 
		border 1px solid #d1d1d1
		background-color #eeeeee
		color #171717
		font-family "Gotham Pro"
		font-size 12px
		font-weight 400
		text-transform uppercase
		letter-spacing 0.035em 
		
	&__item
		position relative
		display flex
		flex-direction column
		justify-content center
		min-height 85px
		padding 20px 0 
		border-bottom 1px solid #d6d6d6
		
		&:last-child
			border-bottom none
		
		&:before {
			content ""
			position absolute
			top 50%
			left -17px
			display block
			width 0
			height 0
			margin-top -4px
			border 8px solid $theme-red
			border-top-width: 4px;
			border-bottom-width: 4px;
			border-top-color: transparent
			border-bottom-color: transparent
			border-right-color: transparent
		}
			 