.select
	display block
	width 100%
	height: 45px;
	padding 10px
	border: 1px solid #dedede;
	background-color: #f6f6f6;
	color: #171717;
	font-family: "Gotham Pro";
	font-size: 14px;
	font-weight: 400;
	appearance: none;
	
	
	&_arrow
		position relative
		
		&:after
			content ""
			position absolute
			right 15px
			top 50%
			display block
			width 0
			height 0
			margin-top -4px
			border 5px solid #bababa
			border-bottom-color transparent 
			border-left-color transparent
			border-right-color transparent	
