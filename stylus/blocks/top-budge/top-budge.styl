.budge
	display flex
	line-height 22px
	
	&:hover,
	&:focus,
	&:active {
		text-decoration none
	}
		
	
	
	&__icon
		padding-bottom 1px
		margin-right 5px
		
	&__val
		min-width 22px
		height 22px
		padding 0 5px 
		border-radius 50%
		text-align center
		font-family Intro
		font-size 11px  
		font-weight 700
		text-transform uppercase 
		line-height 22px
		
		&_red
			background-color $theme-red
			color #FFF 
		
		&_white
			background-color #FFF 
			color $theme-red 