.pagination
	padding 20px 0
	margin 0
	list-style-type none
	text-align center
	color #323232
	font-family: "Gotham Pro";
	font-size 14px
	font-weight 400
	
	
	&__item
		display inline-block
		width 35px
		height 35px
		margin 0 17px 
		border-radius 50%
		line-height 35px
		
		&:hover,
		&_active
			color white
			background $theme-red 
		
	&__link
		display block
		width 100%
		height 100%
		text-decoration none
		
		&:hover,
		&:focus,
		&:active
			text-decoration none
			
		